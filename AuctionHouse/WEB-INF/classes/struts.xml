<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="default" extends="struts-default">
	
	<action name="login" class="loginAction" method ="loginUser">
        <result name="success">/welcome.jsp</result>
	    <result name="error">/loginerror.jsp</result>
    </action>
	
	<action name="register" class="registerAction" method ="registerUser">
        <result name="success">/regsuccess.jsp</result>
	    <result name="error">/regerror.jsp</result>
    </action>
	
	<action name="additem" class="addItemAction" method ="addItem">
        <result name="success">/allitems.jsp</result>
	    <result name="error">/additemerror.jsp</result>
    </action>
		
    </package>
</struts>
